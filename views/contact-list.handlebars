<!-- New Contact Modal -->
<div class="modal fade" id="newContactModal" tabindex="-1" role="dialog" aria-labelledby="newContactModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="newContactModalLabel">New Contact</h4>
      </div>
      <div class="modal-body">
        <form>
            <div class="row">
                <div class="col-md-12">
                     <div class="form-group">
                        <label for="new-contact-email">Email address</label>
                        <input id="new-contact-email" type="email" class="form-control border-input" placeholder="Email">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>First Name</label>
                        <input id="new-contact-firstname" type="text" class="form-control border-input" placeholder="First Name">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Last Name</label>
                        <input id="new-contact-lastname" type="text" class="form-control border-input" placeholder="Last Name">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Gender</label>
                        <select id="new-contact-gender" class="form-control border-input">
                          <option value="male">Male</option>
                          <option value="female">Female</option>
                          <option value="none">No Answer</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phone</label>
                        <input id="new-contact-phone" type="text" class="form-control border-input" placeholder="(xxx)-xxx-xxxx">
                    </div>
                </div>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <div class="left-side">
            <button id="new-contact-addbtn" type="button" class="btn btn-default btn-simple" data-dismiss="modal">Add Contact</button>
        </div>
        <div class="divider"></div>
        <div class="right-side">
            <button type="button" class="btn btn-danger btn-simple" data-dismiss="modal">Never mind</button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END New Contact Modal -->

<!-- Edit Contact Modal -->
<div class="modal fade" id="editContactModal" tabindex="-1" role="dialog" aria-labelledby="editContactModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="editContactModalLabel">Edit Contact</h4>
      </div>
      <div class="modal-body">
        <form>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="checkbox" for="activeCheckbox">
                            <input type="checkbox" id="activeCheckbox" data-toggle="checkbox">
                            Active
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                       <label>Email Sent</label>
                        <select id="edit-contact-status" class="form-control border-input">
                          <option value="0">Not Sent</option>
                          <option value="1">Sent</option>
                          <option value="2">Replied</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                     <div class="form-group">
                        <label for="edit-contact-email">Email address</label>
                        <input id="edit-contact-email" type="email" class="form-control border-input" placeholder="Email">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>First Name</label>
                        <input id="edit-contact-firstname" type="text" class="form-control border-input" placeholder="First Name">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Last Name</label>
                        <input id="edit-contact-lastname" type="text" class="form-control border-input" placeholder="Last Name">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Gender</label>
                        <select id="edit-contact-gender" class="form-control border-input">
                          <option value="male">Male</option>
                          <option value="female">Female</option>
                          <option value="none">No Answer</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phone</label>
                        <input id="edit-contact-phone" type="text" class="form-control border-input" placeholder="(xxx)-xxx-xxxx">
                    </div>
                </div>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <div class="left-side">
            <button id="edit-contact-btn" type="button" class="btn btn-default btn-simple" data-dismiss="modal">Save Changes</button>
        </div>
        <div class="divider"></div>
        <div class="right-side">
            <button type="button" class="btn btn-danger btn-simple" data-dismiss="modal">Never mind</button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END Edit Contact Modal -->

