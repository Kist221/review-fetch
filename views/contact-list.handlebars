                                        <th>Gender</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th>Active</th>
                                    </thead>
                                    <tbody>
                                        {{#each contacts}}
                                            <tr>
                                                <td>{{this.name}}</td>
                                                <td>{{this.email}}</td>
                                                <td>{{#if this.gender}}
                                                    Male
                                                {{else}}
                                                    Female
                                                {{/if}}</td>
                                                <td>{{this.phone}}</td>
                                                <td>{{#ifeq this.status 0}}
                                                    Not Sent
                                                {{else ifeq this.status 1}}
                                                    Sent
                                                {{else}}
                                                    Replied
                                                {{/ifeq}}</td>
                                                <td>{{#if this.active}}
                                                    Yes
                                                {{else}}
                                                    No
                                                {{/if}}</td>
                                                <td><div class="edit-contact btn" id="editContact{{this.id}}" value={{this.id}} data-toggle="modal" data-target="#editContactModal">Edit</div></td>
                                            </tr>
                                        {{/each}}
                                    </tbody>
                                </table>

                            </div>
                        </div>
