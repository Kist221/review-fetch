<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Enter your review</h4>
                    </div>
                    <div class="content">
                        <form id="review-form" class = {{review_type}}>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Contact Name</label>
                                        <input id="contact-name" type="text" class="form-control border-input" placeholder={{contact_name}}>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Contact Email</label>
                                        <input id="contact-email" type="text" class="form-control border-input" placeholder={{contact_email}}>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Contact Phone</label>
                                        <input id="contact-phone" type="text" class="form-control border-input" placeholder={{contact_phone}}>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Review Body</label>
                                        <textarea id="review-textarea" rows="10" class="form-control border-input" placeholder="Write your review here."></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-info btn-fill btn-wd">Submit This Review</button>
                            </div>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


